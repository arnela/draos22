@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="jumbotron" style="width:900px;margin-left:130px;">
    <h2 class="text-center">Search for rental cars</h2>
    <br />
    
    <div id="form">
        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1 col-md-offset-1">
                <label>City</label>
            </div>
            <div class="col-md-5 col-md-offset-2"><label>Brand</label></div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <select class="selectpicker" style="width:280px;">
                    <option>Sarajevo</option>
                    <option>Tuzla</option>
                    <option>Zenica</option>
                </select>
            </div>
            <div class="col-md-5 col-md-offset-2">
                <select class="selectpicker" style="width:280px;">
                    <option>Mercedes</option>
                    <option>Bmw</option>
                </select>
            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1"><label>Price From</label></div>
            <div class="col-md-5 col-md-offset-2"><label>Price To</label></div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <input class="form-control draosWidth" type="number" min="0"/>
            </div>
            <div class="col-md-5 col-md-offset-2">
                <input class="form-control draosWidth" type="number" min="0" />
            </div>
        </div>

        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1"><label>Pick-up Date</label></div>
            <div class="col-md-5 col-md-offset-2"><label>Drop-off Date</label></div>
        </div>
        <div class="row col-md-12">
            <div class="col-md-4 col-md-offset-1">
                <input type="date" class="form-control draosWidth" />
            </div>
            <div class="col-md-5 col-md-offset-2">
                <input type="date" class="form-control draosWidth" />
            </div>
        </div>
        <br />
        <div>
            <input type="submit" class="btn btn-success col-md-offset-10" style="width:80px;" value="Search" />
        </div>
    </div>



</div>
<br />
